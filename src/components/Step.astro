---
const { step, title } = Astro.props;
---

<div class="flex flex-col gap-6">
    <div class="flex gap-4 items-center">
        <span class="flex w-16 aspect-square items-center justify-center rounded-full bg-gradient-to-b from-[#7d4a6b] to-white text-6xl font-bold text-white">{step}</span>
        <span class="flex-1 h-4 bg-gradient-to-r from-[#7d4a6b] to-white" />
    </div>
    <h4 class="font-bold">{title}</h4>
    <slot />
</div>